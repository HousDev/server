<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Purchase Order</title>

    <style>
      body {
        font-family: Arial, sans-serif;
        font-size: 12px;
        padding: 30px;
        padding-bottom: 35mm; /* leave space for footer */
        color: #000;
      }

      /* HEADER */
      .top-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
      }

      .logo {
        height: 60px;
      }

      .po-title {
        text-align: right;
      }

      .po-title h1 {
        margin: 0;
        font-size: 22px;
      }

      /* DETAILS */
      .details {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
      }

      .box {
        width: 48%;
      }

      .box strong {
        display: block;
        margin-bottom: 5px;
      }

      /* SUBJECT */
      .subject {
        margin-bottom: 15px;
      }

      /* ITEMS TABLE */
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
      }

      th,
      td {
        border: 1px solid #333;
        padding: 8px;
      }

      th {
        background: #f2f2f2;
      }

      tbody tr {
        page-break-inside: avoid; /* prevent splitting a row */
      }

      /* TOTALS */
      .totals-wrapper {
        display: flex;
        justify-content: flex-end;
        margin-top: 15px;
        page-break-inside: avoid; /* prevent breaking totals */
      }

      .totals {
        width: 40%;
        border-collapse: collapse;
      }

      .totals td {
        padding: 6px;
        border: 1px solid #333;
      }

      .totals .label {
        text-align: right;
      }

      .totals .value {
        text-align: right;
      }

      .grand {
        font-weight: bold;
      }

      /* TERMS */
      .terms {
        margin-top: 25px;
      }

      .terms h3 {
        margin-bottom: 8px;
      }

      .term-category {
        page-break-inside: avoid; /* keep heading + items together if possible */
        margin-bottom: 12px;
      }

      .term-category h4 {
        margin-bottom: 4px;
      }

      .term-category ul {
        padding-left: 18px;
        margin: 0;
        page-break-inside: auto; /* allow breaking if category is too long */
      }

      .term-category li {
        page-break-inside: avoid; /* don't split list item */
        margin-bottom: 3px;
      }

      /* FOOTER */
      .footer {
        position: fixed;
        bottom: 10mm;
        width: 100%;
        text-align: center;
        font-size: 10px;
        color: #666;
      }

      /* PRINT RULES */
      @media print {
        thead {
          display: table-header-group;
        }

        tfoot {
          display: table-footer-group;
        }

        .page-break {
          page-break-before: always;
        }

        .no-break {
          page-break-inside: avoid;
        }
      }
    </style>
  </head>

  <body>
    <!-- HEADER -->
    <div class="top-header">
      <img src="<%= logoBase64 %>" class="logo" />
      <div class="po-title">
        <h1>PURCHASE ORDER</h1>
        <p><strong>PO No:</strong> <%= poNumber %></p>
        <p><strong>Date:</strong> <%= date %></p>
      </div>
    </div>

    <!-- DETAILS -->
    <div class="details">
      <div class="box">
        <strong>Our Details</strong>
        <p><%= company.name %></p>
        <p><%= company.address %></p>
        <p>GST: <%= company.gst %></p>
      </div>

      <div class="box">
        <strong>Vendor Details</strong>
        <p><%= vendor.name %></p>
        <p><%= vendor.address %></p>
        <p>GST: <%= vendor.gst %></p>
      </div>
    </div>

    <!-- SUBJECT -->
    <div class="subject">
      <p><strong>Subject:</strong> <%= subject %></p>
      <p><%= description %></p>
    </div>

    <div class="subject">
      <p>
        We are pleased to place this Purchase Order for supply of the materials
        mentioned below. Kindly ensure timely delivery at site as per agreed
        terms and conditions.
      </p>
    </div>

    <!-- ITEMS TABLE -->
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Description</th>
          <th>Qty</th>
          <th>Rate</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach((item, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.name %></td>
          <td><%= item.qty %> <%= item.unit %></td>
          <td>₹ <%= item.rate %></td>
          <td>₹ <%= item.qty * item.rate %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- TOTALS -->
    <div class="totals-wrapper">
      <table class="totals">
        <tr>
          <td class="label">Subtotal</td>
          <td class="value">₹ <%= totals.subtotal %></td>
        </tr>
        <tr>
          <td class="label">Discount</td>
          <td class="value">₹ <%= totals.discount %></td>
        </tr>
        <tr>
          <td class="label">GST</td>
          <td class="value">₹ <%= totals.gst %></td>
        </tr>
        <tr class="grand">
          <td class="label">Grand Total</td>
          <td class="value">₹ <%= totals.grandTotal %></td>
        </tr>
      </table>
    </div>

    <!-- TERMS -->
    <div class="terms">
      <h3>Terms & Conditions</h3>

      <% terms.forEach((section, i) => { %>
      <div class="term-category">
        <h4><%= i + 1 %>. <%= section.title %></h4>
        <ul>
          <% section.points.forEach(point => { %>
          <li><%= point %></li>
          <% }) %>
        </ul>
      </div>
      <% }) %>
    </div>
  </body>
</html>
